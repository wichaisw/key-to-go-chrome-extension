{
  "name": "custom-shortcut",
  "version": "1.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["./scripts/background.js", "./scripts/keyListener.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "key-to-go"
  },
  "background": {
    "scripts": ["./scripts/background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "notifications",
    "http://*/",
    "https://*/"
  ]
}