{
  "name": "custom-shortcut",
  "version": "1.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./scripts/keyListener.js", "./scripts/background.js", "./scripts/constant.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Custom Shortcut"
  },
  "background": {
    "scripts": ["./scripts/background.js"]
  },
  "permissions": [
    "tabs",
    "notifications",
    "http://*/",
    "https://*/"
  ]
}